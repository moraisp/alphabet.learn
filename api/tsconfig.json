{ 
  "compilerOptions": {
    "composite": false,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": [ "node" ],  
    "target": "es2019",
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl" : ".", 
    "paths": {
      "@models/*": [
        "../model/*"
      ]
    }
  },
  "exclude": [ "**/*.d.ts" ]
}
